<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_blue_dot"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:id="@+id/blue_dot"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/chatUserImage"
        android:src="@drawable/ic_profile"
        android:background="@drawable/circle"/>

    <TextView
        android:id="@+id/chatUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/chatUserImage"
        android:text="Username"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatUserName"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/chatUserImage"
        android:maxLines="1"
        android:text="lastMessage"
        android:textColor="@color/hollo_blue_light" />

</RelativeLayout>
</androidx.cardview.widget.CardView>